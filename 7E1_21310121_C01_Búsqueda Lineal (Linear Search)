def buscar_articulo(lista_compras, articulo_buscado):
    # Recorrer cada artículo de la lista de compras
    for articulo in lista_compras:
        # Si el artículo es el que estamos buscando, devolvemos True
        if articulo == articulo_buscado:
            return True
    # Si no se encuentra el artículo, devolvemos False
    return False

# Ejemplo de uso
lista_compras = ["manzanas", "leche", "pan", "huevos", "café"]
articulo_buscado = "pan"

if buscar_articulo(lista_compras, articulo_buscado):
    print(f"{articulo_buscado} está en la lista de compras.")
else:
    print(f"{articulo_buscado} no está en la lista de compras.")
